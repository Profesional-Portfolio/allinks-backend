{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/generated/*": ["./generated/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/config/*": ["./src/config/*"],
      "@/domain/*": ["./src/domain/*"],
      "@/infraestructure/*": ["./src/infraestructure/*"],
      "@/data/*": ["./src/data/*"]
    },
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*",
    "tests/**/*",
    "tests/**/*.test.ts"
  ],
  "exclude": ["dist", "generated"]
}

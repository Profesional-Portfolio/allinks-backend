{
  "name": "allinks-backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "test:unit": "jest -c jest.unit.config.ts --coverage --coverageDirectory=coverage",
    "test:integration": "jest -c jest.integration.config.ts --forceExit --detectOpenHandles",
    "test:e2e": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest -c jest.e2e.config.ts --forceExit --detectOpenHandles",
    "dev": "tsx --watch -r tsconfig-paths/register src/app.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:deploy": "pnpm dlx prisma migrate deploy && pnpm dlx prisma generate",
    "db:seed": "tsx -r tsconfig-paths/register src/config/seed.ts",
    "db:reset": "tsx -r tsconfig-paths/register src/config/reset-db.ts",
    "dev:docker": "sh ./scripts/dev.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Profesional-Portfolio/allinks-backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Profesional-Portfolio/allinks-backend/issues"
  },
  "homepage": "https://github.com/Profesional-Portfolio/allinks-backend",
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^30.2.0",
    "@tsconfig/node20": "^20.1.8",
    "@tsconfig/node22": "^22.0.5",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.4",
    "@types/nodemailer": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/utils": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-plugin-perfectionist": "^4.15.1",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "jest-mock-extended": "^2.0.9",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
